@model DINTRANET.Models.sitios

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="contenedor_forms">
    <h2>Detalles del Sitio</h2>

    <div>
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.nombreSitio)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.nombreSitio)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.nombreContacto)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.nombreContacto)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.telefonoContacto)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.telefonoContacto)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.direccionContacto)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.direccionContacto)
                        </dd>

                    </dl>

                </div>

                <div class="col-md-6">


                    <img src="@Url.Content(Model.imagenLogoSitio)" style="width: 60%; height:auto;" />

                </div>


            </div>

        </div>
    </div>
    <p>
        @Html.ActionLink("Editar", "Edit", new { id = Model.sitioId }) |
        @Html.ActionLink("Regresar a la Lista", "Index")
    </p>

</div>