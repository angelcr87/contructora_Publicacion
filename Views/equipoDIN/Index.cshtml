                                </div>

                                @*<div class="form-group col-sm-12">
                                        <label>Puesto: <span class="text-lightred" style="font-size: 3px">*</span></label>

                                        <label for="nombre">@item.Pe_Descripcion<span class="text-lightred" style="font-size: 3px">*</span></label>

                                    </div>*@
                                @*<div class="form-group col-sm-12">
                                        <label>Sucursal: <span class="text-lightred" style="font-size: 3px">*</span></label>

                                        <label for="nombre">@item.Sucursal<span class="text-lightred" style="font-size: 3px">*</span></label>

                                    </div>*@

                                <div class="form-group col-sm-12">
                                    <label>Direccion Sucursal: <span class="text-lightred" style="font-size: 3px">*</span></label>
                                    @*<input name="@item.Em_Fecha_Ingreso.ToShortDateString()" value="@item.Em_Fecha_Ingreso.ToShortDateString()" type="text" class="form-control myInput" id="@item.Em_Fecha_Ingreso.ToShortDateString()" disabled>*@
                                    <label for="nombre">@item.Sc_Direccion_1<span class="text-lightred" style="font-size: 3px">*</span></label>

                                </div>

                                <div class="form-group col-sm-12">
                                    <label>Municio: <span class="text-lightred" style="font-size: 3px">*</span></label>
                                    @*<input name="@item.Em_Fecha_Ingreso.ToShortDateString()" value="@item.Em_Fecha_Ingreso.ToShortDateString()" type="text" class="form-control myInput" id="@item.Em_Fecha_Ingreso.ToShortDateString()" disabled>*@
                                    <label for="nombre">@item.Sc_Municipio<span class="text-lightred" style="font-size: 3px">*</span></label>

                                </div>

                                <div class="form-group col-sm-12">
                                    <label>Fecha de Ingreso: <span class="text-lightred" style="font-size: 3px">*</span></label>
                                    @*<input name="@item.Em_Fecha_Ingreso.ToShortDateString()" value="@item.Em_Fecha_Ingreso.ToShortDateString()" type="text" class="form-control myInput" id="@item.Em_Fecha_Ingreso.ToShortDateString()" disabled>*@
                                    <label for="nombre">@item.Em_Fecha_Ingreso.ToShortDateString() <span class="text-lightred" style="font-size: 3px">*</span></label>

                                </div>

                                <div class="form-group col-sm-12">
                                    <label>Antigüedad: <span class="text-lightred" style="font-size: 3px">*</span></label>
                                    @*<input name="@item.Em_Fecha_Ingreso.ToShortDateString()" value="@item.Em_Fecha_Ingreso.ToShortDateString()" type="text" class="form-control myInput" id="@item.Em_Fecha_Ingreso.ToShortDateString()" disabled>*@
