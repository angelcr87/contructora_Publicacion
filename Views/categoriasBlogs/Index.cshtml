@model IEnumerable<DINTRANET.Models.categoriasBlog>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="contenedor_forms">
    <h2>Administrador de Categorias de Post</h2>

    <p>
        @*@Html.ActionLink("Create New", "Create")*@
        <button class="btn btn-default" onclick="location.href='@Url.Action("Create","categoriasBlogs")'">Crear Nuevo</button>
        <button class="btn btn-default" onclick="location.href='@Url.Action("Index","comunidadDIN")'">Regresar al Blog</button>
    </p>
    <div class="table-responsive">
        <table id="listaCategoriaPost" class="display" style="width:100%">
            <thead class="tableHead">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.nombre)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
            {
                    <tr>

                        <td>
                            @Html.DisplayFor(modelItem => item.nombre)
                        </td>
                        <td>
                            @Html.ActionLink("Editar", "Edit", new { id = item.categoriaId }) |
                            @*@Html.ActionLink("Detalles", "Details", new { id = item.categoriaId }) |*@
                            @Html.ActionLink("Eliminar", "Delete", new { id = item.categoriaId })
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot class="tableFoot">
                <tr>
                    <td>
                        @Html.DisplayNameFor(model => model.nombre)
                    </td>
                    <td></td>
                </tr>
            </tfoot>

        </table>
    </div>

    </div>