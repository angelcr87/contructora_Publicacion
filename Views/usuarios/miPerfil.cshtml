            <div class="text-center">


                @if (Model.imagenPerfil != "")
                {
                    <img src="@Url.Content(Model.imagenPerfil)" class="avatar img-circle img-thumbnail" alt="@Model.nickName">
                    @*<img src="~/assets/images/fotoPerfil/jorch - copia.jpg" />*@
                }
                else
                {
                    <img src="http://ssl.gstatic.com/accounts/ui/avatar_2x.png" class="avatar img-circle img-thumbnail" alt="avatar">
                    }

                @using (Html.BeginForm("GuardarImagen", "usuarios", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.HiddenFor(model => model.usuarioId)
                    @Html.HiddenFor(model => model.imagenPerfil)
